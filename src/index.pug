extends head.pug

block body
  div.section
    div.container.header
      div.logo 
        h1 #{blogTitle}#[span Under heavy construction]
      nav.nav-links
        a(href="#hire-me") Hire me!
        a(href="#posts") Posts

  div.section
    div#posts.container
      ul.post-list
        each post in posts.slice(0, 10).sort(postOrder)
          li.preview
            a(href=post.filename)
              div.post-img
              h2.post-title #{post.title}
              div.post-intro
                != post.preview
                  
