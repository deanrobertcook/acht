extends head.pug

block body
  div.section
    div.container.header
      div.logo 
        h1 #{blogTitle}#[span Under heavy construction]
      nav.nav-links
        a(href="#hire-me") Hire me!
        a(href="#posts") Posts

  div.section
    ul.post-list
      each post in posts.slice(0, 10).sort(postOrder)
        li
          a(href=post.filename).preview
            h2.post-title #{post.title}
            div.post-intro
              != post.preview
      
                  
