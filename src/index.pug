extends head.pug

block body
  div#header.section
    div.logo
      h1 #{blogTitle}
      p.subtitle Under heavy construction

  div.section
    ul.post-list
      each post in posts.slice(0, 10).sort(postOrder)
        li
          a(href=post.filename).post-prev
            h2.post-prev-title #{post.title}
            p.post-prev-intro
              != post.preview
                
      
                  
